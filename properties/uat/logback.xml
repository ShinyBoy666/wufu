<?xml version="1.0" encoding="UTF-8"?>
<configuration>


	<!--定义日志文件的存储地址 勿在 LogBack 的配置中使用相对路径 -->
	<property name="LOG_HOME" value="/data/logs/jetty/wufu" />



	<!-- 控制台输出开始 -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- 日志输出编码 -->
		<Encoding>UTF-8</Encoding>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符 -->
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50}-[%file:%line]%msg%n</pattern>
		</layout>
	</appender>
	<!-- 控制台输出结束 -->



	<!-- 公共日志文件生成开始 -->
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<Encoding>UTF-8</Encoding>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${LOG_HOME}/common/app.log.%d{yyyy-MM-dd}.log
			</FileNamePattern>
			<MaxHistory>30</MaxHistory>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50}-[%file:%line]%msg%n</pattern>
		</layout>
	</appender>
	
	<logger name="cn.xinmeng" additivity="false">
		<appender-ref ref="FILE" />
	</logger>
	
	<logger name="com.pay" additivity="false">
		<appender-ref ref="FILE" />
	</logger>
	
	<!-- 公共日志文件生成结束 -->




	<!-- 支付回调日志开始 -->
	<appender name="PayReturnFile"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<Encoding>UTF-8</Encoding>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${LOG_HOME}/pay/payReturn.log.%d{yyyy-MM-dd}.log
			</FileNamePattern>
			<MaxHistory>1</MaxHistory>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50}-[%file:%line]%msg%n</pattern>
		</layout>
	</appender>
	<logger name="payReturnLog" additivity="false">
		<level value="INFO" />
		<appender-ref ref="PayReturnFile" />
	</logger>
	<!-- 支付回调日志结束 -->



	<!-- 订单商品分利日志开始 -->
	<appender name="OrderProductProfitFile"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<Encoding>UTF-8</Encoding>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${LOG_HOME}/profit/profitLog.log.%d{yyyy-MM-dd}.log
			</FileNamePattern>
			<MaxHistory>1</MaxHistory>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50}-[%file:%line]%msg%n</pattern>
		</layout>
	</appender>
	<logger name="profitLog" additivity="false">
		<level value="INFO" />
		<appender-ref ref="OrderProductProfitFile" />
	</logger>
	<!-- 订单商品分利日志结束 -->

	
	<!-- 统计日志开始 -->
	<appender name="StatFile"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<Encoding>UTF-8</Encoding>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${LOG_HOME}/stat/statLog.log.%d{yyyy-MM-dd}.log
			</FileNamePattern>
			<MaxHistory>1</MaxHistory>
		</rollingPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%msg%n</pattern>
		</layout>
	</appender>
	<logger name="statLog" additivity="false">
		<level value="INFO" />
		<appender-ref ref="StatFile" />
	</logger>
	<!-- 统计日志结束 -->
	
	
	
</configuration>